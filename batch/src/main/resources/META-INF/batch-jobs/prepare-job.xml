<job id="prepareJob" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <properties>
        <property name="locale" value="en_US"/>
        <property name="host" value="https://{region}.api.blizzard.com"/>
    </properties>

    <step id="realmsStep">
        <batchlet ref="loadRealmsBatchlet">
            <properties>
                <property name="locale" value="#{jobProperties['locale']}"/>
                <property name="host" value="#{jobProperties['host']}"/>
                <property name="endpoint" value="/data/wow/realm/index"/>
                <property name="region" value="#{partitionPlan['region']}"/>
            </properties>
        </batchlet>
        <partition>
            <plan partitions="2">
                <properties partition="0">
                    <property name="region" value="us"/>
                </properties>
                <properties partition="1">
                    <property name="region" value="eu"/>
                </properties>
            </plan>
        </partition>
    </step>

